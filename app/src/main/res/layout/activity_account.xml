<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.umich.andrewbull.piedpiper.Account">

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="25dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher_round"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewUsername"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/textViewReviewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reviews"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textViewReviewTitle1"
        android:layout_marginStart="42dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="19dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="42dp" />

    <TextView
        android:id="@+id/textViewReviewTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review 1"
        app:layout_constraintLeft_toLeftOf="@+id/textViewReviewTitle"
        app:layout_constraintBottom_toBottomOf="@+id/ratingBar1"
        app:layout_constraintTop_toTopOf="@+id/ratingBar1"
        app:layout_constraintVertical_bias="0.475" />

    <TextView
        android:id="@+id/textViewReviewTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review 2"
        app:layout_constraintLeft_toLeftOf="@+id/textViewReviewText1"
        app:layout_constraintBottom_toBottomOf="@+id/ratingBar2"
        app:layout_constraintTop_toTopOf="@+id/ratingBar2"
        app:layout_constraintVertical_bias="0.475"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1" />

    <TextView
        android:id="@+id/textViewReviewTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review 3"
        app:layout_constraintLeft_toLeftOf="@+id/textViewReviewText2"
        app:layout_constraintBottom_toBottomOf="@+id/ratingBar3"
        app:layout_constraintTop_toTopOf="@+id/ratingBar3"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1" />

    <RatingBar
        android:id="@+id/ratingBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/ratingBar2"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/ratingBar2"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/textViewReviewText2"
        android:layout_width="260dp"
        android:layout_height="41dp"
        android:text="Insert Review"
        app:layout_constraintLeft_toLeftOf="@+id/textViewReviewTitle2"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textViewReviewText3"
        android:layout_marginBottom="48dp" />

    <TextView
        android:id="@+id/textViewReviewText3"
        android:layout_width="260dp"
        android:layout_height="41dp"
        android:text="Insert Review"
        app:layout_constraintLeft_toLeftOf="@+id/textViewReviewTitle3"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="43dp"
        app:layout_constraintTop_toTopOf="@+id/textViewReviewTitle3" />

    <TextView
        android:id="@+id/textViewReviewText1"
        android:layout_width="260dp"
        android:layout_height="41dp"
        android:text="Insert Review"
        app:layout_constraintLeft_toLeftOf="@+id/textViewReviewTitle1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textViewReviewText2"
        android:layout_marginBottom="53dp" />

    <RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/ratingBar3"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/ratingBar3"
        android:layout_marginBottom="34dp" />

    <RatingBar
        android:id="@+id/ratingBar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="86dp"
        android:layout_marginRight="16dp" />
</android.support.constraint.ConstraintLayout>
