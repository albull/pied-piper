<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.umich.andrewbull.piedpiper.SearchResultsViewActivity"
    android:windowSoftInputMode="adjustResize">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:text="Dishes"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.177" />

    <TextView
        android:id="@+id/textViewDish1"
        android:layout_width="299dp"
        android:layout_height="40dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewDish2"
        app:layout_constraintLeft_toLeftOf="@+id/textViewDish2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textViewDish2"
        android:layout_width="298dp"
        android:layout_height="40dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewDish3"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintLeft_toLeftOf="@+id/textViewDish3"
        app:layout_constraintTop_toBottomOf="@+id/textViewDish1" />

    <TextView
        android:id="@+id/textViewDish3"
        android:layout_width="274dp"
        android:layout_height="40dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintLeft_toLeftOf="@+id/textViewRestaurant1"
        app:layout_constraintTop_toBottomOf="@+id/textViewDish2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurants"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        app:layout_constraintBottom_toTopOf="@+id/textViewRestaurant1"
        app:layout_constraintTop_toBottomOf="@+id/textViewDish3"
        app:layout_constraintHorizontal_bias="0.063" />

    <TextView
        android:id="@+id/textViewRestaurant1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewRestaurant2"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintLeft_toLeftOf="@+id/textViewRestaurant2"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textViewRestaurant2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintLeft_toLeftOf="@+id/textViewRestaurant3"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.434" />

    <TextView
        android:id="@+id/textViewRestaurant3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDish3"
        app:layout_constraintVertical_bias="0.805" />

    <TextView
        android:id="@+id/textViewSeeMoreDish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See More"
        app:layout_constraintBottom_toTopOf="@+id/textViewDish1"
        app:layout_constraintHorizontal_bias="0.853"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.723" />

    <TextView
        android:id="@+id/textViewSeeMoreRestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See More"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.871"
        app:layout_constraintRight_toRightOf="@+id/textViewSeeMoreDish"
        app:layout_constraintTop_toBottomOf="@+id/textViewDish3"
        app:layout_constraintVertical_bias="0.175" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="390dp"
        android:layout_height="85dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <ListView
        android:id="@+id/searchSuggestionsListView"
        android:layout_width="371dp"
        android:layout_height="200dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/searchView" />

</android.support.constraint.ConstraintLayout>

